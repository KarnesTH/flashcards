---
const currentYear = new Date().getFullYear();

const navigation = {
	main: [
		{ name: 'Datenschutz', href: '/privacy' },
		{ name: 'Impressum', href: '/imprint' },
	],
	social: [
		{
			name: 'KarnesTH\'s GitHub',
			title: 'KarnesTH\'s GitHub Profil',
			ariaLabel: 'Weiterleitung zu KarnesTH\'s GitHub Profil',
			href: 'https://github.com/KarnesTH',
			icon: `<svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 256 256"><rect width="256" height="256" fill="none"/><path d="M104,232V192a32,32,0,0,1,32-32h0a32,32,0,0,1,32,32v40Z" opacity="0.2"/><path d="M119.83,56A52,52,0,0,0,76,32a51.92,51.92,0,0,0-3.49,44.7A49.28,49.28,0,0,0,64,104v8a48,48,0,0,0,48,48h48a48,48,0,0,0,48-48v-8a49.28,49.28,0,0,0-8.51-27.3A51.92,51.92,0,0,0,196,32a52,52,0,0,0-43.83,24Z" opacity="0.2"/><path d="M119.83,56A52,52,0,0,0,76,32a51.92,51.92,0,0,0-3.49,44.7A49.28,49.28,0,0,0,64,104v8a48,48,0,0,0,48,48h48a48,48,0,0,0,48-48v-8a49.28,49.28,0,0,0-8.51-27.3A51.92,51.92,0,0,0,196,32a52,52,0,0,0-43.83,24Z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"/><path d="M104,232V192a32,32,0,0,1,32-32h0a32,32,0,0,1,32,32v40" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"/><path d="M104,208H72a32,32,0,0,1-32-32A32,32,0,0,0,8,144" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="16"/></svg>`
		}
	]
};
---

<footer class="bg-background border-t border-border">
	<div class="max-w-7xl mx-auto px-4 py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<div class="space-y-4">
				<a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary-500 to-accent-500 bg-clip-text text-transparent">
					Flashcards
				</a>
				<p class="text-foreground text-sm max-w-xs">
					Lerne effektiver mit digitalen Karteikarten. Einfach, intuitiv und wissenschaftlich fundiert.
				</p>
			</div>

			<div>
				<h3 class="text-sm font-semibold text-foreground mb-4">Navigation</h3>
				<ul class="space-y-3">
					{navigation.main.map((item) => (
						<li>
							<a 
								href={item.href}
								class="text-foreground hover:text-primary-500 text-sm transition-colors"
							>
								{item.name}
							</a>
						</li>
					))}
				</ul>
			</div>

			<div>
				<h3 class="text-sm font-semibold text-foreground mb-4">Kontakt</h3>
				<div class="flex space-x-4">
					{navigation.social.map((item) => (
						<a 
							href={item.href}
							class="text-primary-500 hover:text-foreground transition-colors"
							target="_blank"
							rel="noopener noreferrer"
							aria-label={item.ariaLabel}
							title={item.title}
						>
							<span class="sr-only">{item.name}</span>
							<Fragment set:html={item.icon} />
						</a>
					))}
				</div>
				<p class="mt-4 text-foreground text-sm">
					<a href="mailto:contact@flashcards.app" class="hover:text-primary-500 transition-colors">
						contact@flashcards.app
					</a>
				</p>
			</div>
		</div>

		<div class="mt-12 pt-8 border-t border-border">
			<p class="text-foreground text-sm text-center">
				&copy; {currentYear} KarnesTH. Alle Rechte vorbehalten.
			</p>
		</div>
	</div>
</footer>