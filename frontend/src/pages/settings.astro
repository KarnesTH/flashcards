---
import Layout from '../layouts/Layout.astro';
import SettingsForm from '../components/settings/SettingsForm';
---

<Layout title="Einstellungen - Flashcards">
    <div class="flex items-center justify-center min-h-[calc(100vh-4rem)] p-4">
        <div class="w-full max-w-7xl space-y-6">
            <div class="bg-background rounded-2xl shadow-lg border border-border p-8">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
                    <div>
                        <h1 class="text-3xl font-bold bg-gradient-to-r from-primary-500 to-accent-500 bg-clip-text text-transparent">
                            Einstellungen
                        </h1>
                        <p class="text-foreground text-sm mt-1">
                            Verwalte deine privaten Einstellungen und Präferenzen
                        </p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="md:col-span-1">
                        <nav class="space-y-1">
                            <a href="#account" class="block px-4 py-2 rounded-lg bg-primary-500/10 text-primary-500">
                                Account
                            </a>
                            <a href="#privacy" class="block px-4 py-2 rounded-lg text-foreground/60 hover:bg-primary-500/10 hover:text-primary-500 transition-colors">
                                Privatsphäre
                            </a>
                        </nav>
                    </div>

                    <div class="md:col-span-2">
                        <SettingsForm client:load />
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>